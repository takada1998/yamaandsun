        <div class="l-main__music__image">
            <script>
                let images = [
                    { src: 'assets/images/music1.jpeg', name: 'Image 1' },
                    { src: 'assets/images/music2.jpeg', name: 'Image 2' },
                    { src: 'assets/images/music3.jpeg', name: 'Image 3' },
                    { src: 'assets/images/music4.jpeg', name: 'Image 4' },
