                    { src: 'assets/images/music7.jpeg', name: 'Image 7' },
                    { src: 'assets/images/music8.jpeg', name: 'Image 8' },
                    { src: 'assets/images/music9.jpeg', name: 'Image 9' },
                    { src: 'assets/images/music10.jpeg', name: 'Image 10' },
                    { src: 'assets/images/music11.jpeg', name: 'Image 11' },
                    { src: 'assets/images/music12.jpeg', name: 'Image 12' },
                ];

                let gridContainer = document.querySelector('.l-main__music__image');

                images.forEach(image => {
                    let itemDiv = document.createElement('div');
                    itemDiv.classList.add('l-main__musicimageitem');

                    let imgElement = document.createElement('img');
                    imgElement.src = image.src;
                    imgElement.alt = image.name;

                    let caption = document.createElement('p');
                    caption.textContent = image.name;

                    itemDiv.appendChild(imgElement);
                    itemDiv.appendChild(caption);
                    gridContainer.appendChild(itemDiv);
                });
            </script>
        </div>
